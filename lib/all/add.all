(include all
    lib/all/inc.all
    lib/all/dec.all
    lib/all/eq.all
    lib/all/ret.all
    lib/all/lr.all)

; add(x, y) = x, if y = 0
; add(x, y) = dec(add(x, inc(y))), if y < 0
; add(x, y) = inc(add(x, dec(y)))
(define (add x y)
    (if (eq y 0)
        (ret x)
        (if (lr y 0)
            (dec (add x (inc y)))
            (inc (add x (dec y))))))
